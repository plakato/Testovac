<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="testy.controllers.FXMLNewTestController">
   <children>
      <HBox prefHeight="31.0" prefWidth="600.0" spacing="10.0">
         <children>
            <Label text="Názov testu:" />
            <VBox>
               <children>
                  <TextField fx:id="name" prefHeight="25.0" prefWidth="502.0" />
                  <Label fx:id="nameWarning" prefHeight="17.0" prefWidth="502.0" />
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <Label text="Otázky:" />
      <ScrollPane prefHeight="200.0" prefWidth="200.0">
         <content>
            <GridPane hgap="20.0" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </GridPane>
         </content>
      </ScrollPane>
      <HBox spacing="10.0">
         <children>
            <SplitMenuButton mnemonicParsing="false" popupSide="RIGHT" text="Pridať otázku">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#addMultichoiceQuestion" text="s viac správnymi odpoveďami" />
                <MenuItem mnemonicParsing="false" onAction="#addSinglechoiceQuestion" text="s jednou správnou odpoveďou" />
                  <MenuItem mnemonicParsing="false" onAction="#addWrittenAnswerQuestion" text="s písomnou odpoveďou" />
              </items>
            </SplitMenuButton>
            <Pane HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#createThisTest" text="Hotovo" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
